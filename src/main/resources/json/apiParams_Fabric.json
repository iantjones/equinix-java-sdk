{
  "functionalAreas": {
    "Fabric": {
      "uriFormat": "fabric/v{$version}/{$rootUri}/{$requestUri}",
      "defaultVersion": 4,
      "Metros": {
        "rootUri": "metros",
        "serviceEndpoints": {
          "GetMetros": {
            "httpMethod": "GET"
          },
          "GetMetro": {
            "httpMethod": "GET",
            "requestUri": "{$metroCode}"
          }
        }
      },
      "Pricing": {
        "rootUri": "prices",
        "serviceEndpoints": {
          "GetPricing": {
            "httpMethod": "POST",
            "requestUri": "search"
          }
        }
      },
      "ServiceProfiles": {
        "rootUri": "serviceProfiles",
        "serviceEndpoints": {
          "ListServiceProfiles": {
            "httpMethod": "GET"
          },
          "SearchServiceProfiles": {
            "httpMethod": "POST",
            "requestUri": "search"
          },
          "PostServiceProfile": {
            "httpMethod": "POST"
          },
          "GetServiceProfile": {
            "httpMethod": "GET",
            "requestUri": "{$uuid}"
          },
          "DeleteServiceProfile": {
            "httpMethod": "DELETE",
            "requestUri": "{$uuid}"
          }
        }
      },
      "Ports": {
        "rootUri": "ports",
        "serviceEndpoints": {
          "GetPorts": {
            "httpMethod": "GET"
          },
          "GetPort": {
            "httpMethod": "GET",
            "requestUri": "{$uuid}"
          },
          "GetStatistics": {
            "httpMethod": "GET",
            "requestUri": "{$uuid}/stats"
          }
        }
      },
      "Connections": {
        "rootUri": "connections",
        "serviceEndpoints": {
          "SearchConnections": {
            "httpMethod": "POST",
            "requestUri": "search"
          },
          "GetConnection": {
            "httpMethod": "GET",
            "requestUri": "{$uuid}"
          },
          "PostConnection": {
            "httpMethod": "POST"
          },
          "PostBulkConnections": {
            "httpMethod": "POST",
            "requestUri": "bulk"
          },
          "DeleteConnection": {
            "httpMethod": "DELETE",
            "requestUri": "{$uuid}"
          },
          "ManageConnection": {
            "httpMethod": "POST",
            "requestUri": "{$uuid}/actions"
          },
          "GetStatistics": {
            "httpMethod": "GET",
            "requestUri": "{$uuid}/stats"
          }
        }
      },
      "ServiceTokens": {
        "rootUri": "serviceTokens",
        "serviceEndpoints": {
          "GetServiceTokens": {
            "httpMethod": "GET"
          },
          "GetServiceToken": {
            "httpMethod": "GET",
            "requestUri": "{$uuid}"
          },
          "PostServiceToken": {
            "httpMethod": "POST"
          },
          "DeleteServiceToken": {
            "httpMethod": "DELETE",
            "requestUri": "{$uuid}"
          }
        }
      },      
      "FabricGateways": {
        "rootUri": "gateways",
        "serviceEndpoints": {
          "SearchFabricGateways": {
            "httpMethod": "POST",
            "requestUri": "search"
          },
          "GetFabricGateway": {
            "httpMethod": "GET",
            "requestUri": "{$uuid}"
          },
          "PostFabricGateway": {
            "httpMethod": "POST"
          },
          "DeleteFabricGateway": {
            "httpMethod": "DELETE",
            "requestUri": "{$uuid}"
          }
        }
      }
    }
  }
}